<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/profile"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:id="@+id/user_profile_image_search"
            />

        <TextView
            android:id="@+id/user_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_below="@+id/user_profile_image_search"
            android:gravity="center"
            android:layout_marginStart="70dp"
            android:layout_marginTop="-105dp"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/user_full_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User FullName"
            android:layout_below="@+id/user_name_search"
            android:gravity="center"
            android:layout_marginStart="70dp"
            android:textSize="12sp"
            android:textColor="@color/colorTeal"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/follow_btn_search"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:background="@color/colorTeal"
            android:text="Follow"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/user_full_name_search"
            android:layout_marginTop="10dp"
            android:layout_marginStart="170dp"
            />



    </RelativeLayout>

</RelativeLayout>